<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HeightFragment">

    <data>
        <variable
            name="heightFragment"
            type="com.rahafcs.co.rightway.ui.HeightFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textColor="@color/light_black"
            android:textSize="25sp"
            app:fontFamily="casual"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="120dp"
            android:id="@+id/height_textview"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/height_textview"
            app:layout_constraintStart_toStartOf="@id/height_textview"
            app:layout_constraintEnd_toEndOf="@id/height_textview"
            android:hint="e.g 170"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/height_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/height_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/height_input_layout"
            app:layout_constraintStart_toStartOf="@id/height_input_layout"
            app:layout_constraintEnd_toEndOf="@id/height_input_layout"
            android:id="@+id/feet_btn"
            android:text="Feet"
            android:layout_marginTop="52dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/feet_btn"
            app:layout_constraintStart_toStartOf="@id/feet_btn"
            app:layout_constraintEnd_toEndOf="@id/feet_btn"
            android:id="@+id/cm_btn"
            android:text="Centimeters"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textAllCaps="false"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>