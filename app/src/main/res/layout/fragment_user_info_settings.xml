<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.UserInfoSettingsFragment">
    <data>
        <variable
            name="userInfoViewModel"
            type="com.rahafcs.co.rightway.viewmodels.SignUpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/person"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            android:id="@+id/user_img"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userInfoViewModel.userInfo.firstName}"
            app:layout_constraintTop_toBottomOf="@id/user_img"
            app:layout_constraintStart_toStartOf="@id/user_img"
            app:layout_constraintEnd_toEndOf="@id/user_img"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/user_name_textview"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/user_name_textview"
            app:layout_constraintStart_toStartOf="@id/user_name_textview"
            app:layout_constraintEnd_toEndOf="@id/user_name_textview"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@{userInfoViewModel.userInfo.subscriptionStatus}"
            android:id="@+id/subscription_status"/>
        <View
            android:id="@+id/divider1"
            style="@style/Widget.Rightway.Divider"
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/subscription_status"
            app:layout_constraintStart_toStartOf="@id/subscription_status"
            app:layout_constraintEnd_toEndOf="@id/subscription_status"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:text="@string/height"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/height_textview"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/height_textview"
            app:layout_constraintTop_toTopOf="@id/height_textview"
            app:layout_constraintBottom_toBottomOf="@id/height_textview"
            android:text="@{userInfoViewModel.userInfo.height}"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:id="@+id/user_height"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/height_textview"
            app:layout_constraintStart_toStartOf="@id/height_textview"
            android:text="@string/weight"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:id="@+id/weight_textview"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/weight_textview"
            app:layout_constraintTop_toTopOf="@id/weight_textview"
            app:layout_constraintBottom_toBottomOf="@id/weight_textview"
            android:text="@{userInfoViewModel.userInfo.weight}"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:id="@+id/user_weight"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/weight_textview"
            app:layout_constraintStart_toStartOf="@id/weight_textview"
            android:text="@string/age"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:id="@+id/age_textview"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/age_textview"
            app:layout_constraintTop_toTopOf="@id/age_textview"
            app:layout_constraintBottom_toBottomOf="@id/age_textview"
            android:text="@{userInfoViewModel.userInfo.age}"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:id="@+id/user_age"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/age_textview"
            app:layout_constraintStart_toStartOf="@id/age_textview"
            android:text="@string/gender"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:id="@+id/gender_textview"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/gender_textview"
            app:layout_constraintTop_toTopOf="@id/gender_textview"
            app:layout_constraintBottom_toBottomOf="@id/gender_textview"
            android:text="@{userInfoViewModel.userInfo.gender}"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:id="@+id/user_gender"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gender_textview"
            app:layout_constraintStart_toStartOf="@id/gender_textview"
            android:text="@string/activity_level"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:id="@+id/activity_level_textview"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/activity_level_textview"
            app:layout_constraintTop_toTopOf="@id/activity_level_textview"
            app:layout_constraintBottom_toBottomOf="@id/activity_level_textview"
            android:text="@{userInfoViewModel.userInfo.activity}"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:id="@+id/user_activity_leve"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_out"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/sign_out"
            android:textAllCaps="false"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_home"
            android:text="@string/back_to_home"
            android:textAllCaps="false"
            android:layout_margin="16dp"
            app:layout_constraintStart_toEndOf="@id/sign_out"
            app:layout_constraintTop_toTopOf="@id/sign_out"
            app:layout_constraintBottom_toBottomOf="@id/sign_out"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>