            android:layout_width="280dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/user_height_input_layout"
            app:layout_constraintTop_toTopOf="@id/weight_textview"
            app:layout_constraintBottom_toBottomOf="@id/weight_textview"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/user_weight_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="@{userInfoViewModel.userInfo.weight}"
                android:id="@+id/user_weight_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>
