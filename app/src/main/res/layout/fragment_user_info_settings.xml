<!--                android:layout_height="wrap_content"-->
<!--                android:inputType="text"-->
<!--                android:text="@{userInfoViewModel.userInfo.activity}"-->
<!--                android:id="@+id/user_activity_leve_edit_text"/>-->
<!--        </com.google.android.material.textfield.TextInputLayout>-->

        <!--endregion user_activity_leve_input_layout -->

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:id="@+id/activity_options"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/user_height_input_layout"
            app:layout_constraintTop_toBottomOf="@id/gender_option"
            android:checkedButton="@id/option_0"
            android:orientation="vertical">
            <RadioButton
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_0"
                android:id="@+id/option_0"/>
            <RadioButton
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_1"
                android:id="@+id/option_1"/>
            <RadioButton
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_2"
                android:id="@+id/option_2"/>
            <RadioButton
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/option_3"
                android:id="@+id/option_3"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:layout_marginTop="164dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_level_textview"
            android:text="Edit"
            android:background="@drawable/button_disabled"
            android:id="@+id/save_btn"
            android:textAllCaps="false"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>