<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.BrowsFragment">

    <data>
        <variable
            name="browsFragment"
            type="com.rahafcs.co.rightway.ui.BrowsFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:id="@+id/equipment_card"
                app:cardElevation="11dp"
                app:cardCornerRadius="11dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/dumbbell"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Equipment"
                        android:padding="16dp"
                        android:textAppearance="?attr/textAppearanceHeadline6"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/expand_menu"
                        android:orientation="vertical">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All equipment"
                            android:id="@+id/all_equipment"
                            android:padding="16dp"
                            android:textAppearance="?attr/textAppearanceBody1"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Barbell"
                            android:id="@+id/barbell"
                            android:padding="16dp"
                            android:textAppearance="?attr/textAppearanceBody1"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cable"
                            android:id="@+id/cable"
                            android:padding="16dp"
                            android:textAppearance="?attr/textAppearanceBody1"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dumbbell"
                            android:id="@+id/dumbbell"
                            android:padding="16dp"
                            android:textAppearance="?attr/textAppearanceBody1"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kettle bell"
                            android:id="@+id/kettle_bell"
                            android:padding="16dp"
                            android:textAppearance="?attr/textAppearanceBody1"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Resistance band"
                            android:id="@+id/resistance_band"
                            android:padding="16dp"
                            android:textAppearance="?attr/textAppearanceBody1"/>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/no_equipment_card"
                android:layout_margin="8dp"
                app:cardElevation="11dp"
                app:cardCornerRadius="11dp"
                app:layout_constraintTop_toBottomOf="@id/equipment_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/body_weight"
                        android:scaleType="centerCrop"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body weight"
                        android:padding="16dp"
                        android:textAppearance="?attr/textAppearanceHeadline6"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>



</layout>