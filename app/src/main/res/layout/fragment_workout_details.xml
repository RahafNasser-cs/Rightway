<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.WorkoutDetailsFragment">

    <data>
        <variable
            name="workoutViewModel"
            type="com.rahafcs.co.rightway.viewmodels.WorkoutsViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/back_arrow"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/share_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/share_img"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout details"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/workout_details"
            android:layout_marginTop="20dp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:src="@drawable/broken_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            imageUrl="@{workoutViewModel.workoutsInfoUiState.gifUrl}"
            app:layout_constraintTop_toBottomOf="@id/workout_details"
            android:layout_margin="8dp"
            android:id="@+id/workout_img"
            android:scaleType="centerCrop"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="@{workoutViewModel.workoutsInfoUiState.name}"
            app:layout_constraintTop_toBottomOf="@id/workout_img"
            app:layout_constraintStart_toStartOf="@id/workout_img"
            app:layout_constraintEnd_toEndOf="@id/workout_img"
            android:textSize="24sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:id="@+id/workout_name_textview"
            />
        <com.google.android.material.card.MaterialCardView
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/workout_name_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/dark_white"
            android:layout_marginTop="16dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/info_card"
            app:cardElevation="11dp"
            app:cardCornerRadius="11dp"

            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Equipment:"
                    android:textSize="16sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="8dp"
                    android:id="@+id/equipment_textview"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{workoutViewModel.workoutsInfoUiState.equipment}"
                    android:textSize="16sp"
                    android:layout_margin="8dp"
                    app:layout_constraintStart_toEndOf="@id/equipment_textview"
                    app:layout_constraintTop_toTopOf="@id/equipment_textview"
                    app:layout_constraintBottom_toBottomOf="@id/equipment_textview"
                    android:id="@+id/equipment_eg"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body part:"
                    android:id="@+id/body_part_textview"
                    app:layout_constraintStart_toStartOf="@id/equipment_textview"
                    app:layout_constraintTop_toBottomOf="@id/equipment_textview"
                    android:layout_marginTop="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="@{workoutViewModel.workoutsInfoUiState.bodyPart}"
                    app:layout_constraintTop_toTopOf="@id/body_part_textview"
                    app:layout_constraintBottom_toBottomOf="@id/body_part_textview"
                    app:layout_constraintStart_toEndOf="@id/body_part_textview"
                    android:layout_margin="8dp"
                    android:id="@+id/body_part_eg"
                    android:textSize="16sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Target:"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/body_part_textview"
                    app:layout_constraintStart_toStartOf="@id/body_part_textview"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/target_textview"
                    android:layout_marginBottom="8dp"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/target_textview"
                    app:layout_constraintTop_toTopOf="@id/target_textview"
                    app:layout_constraintBottom_toBottomOf="@id/target_textview"
                    android:text="@{workoutViewModel.workoutsInfoUiState.target}"
                    android:layout_margin="8dp"
                    android:id="@+id/target_eg"
                    android:textSize="16sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/progress_bar"
            android:background="@drawable/circle_shape"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progressbar"
            app:layout_constraintTop_toBottomOf="@id/info_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/progress_bar"
            app:layout_constraintTop_toBottomOf="@id/progress_bar"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            android:id="@+id/time_textview"
            android:text="0"
            android:layout_marginTop="8dp"
            android:textSize="26sp"
            android:textStyle="bold"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plus"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/time_textview"
            app:layout_constraintTop_toTopOf="@id/time_textview"
            app:layout_constraintBottom_toBottomOf="@id/time_textview"
            android:id="@+id/plus"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/minus"
            android:id="@+id/minus"
            app:layout_constraintEnd_toStartOf="@id/time_textview"
            app:layout_constraintTop_toTopOf="@id/time_textview"
            app:layout_constraintBottom_toBottomOf="@id/time_textview"
            android:layout_marginEnd="16dp"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/progress_bar"
            app:layout_constraintEnd_toEndOf="@id/progress_bar"
            app:layout_constraintStart_toStartOf="@id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/progress_bar"
            android:id="@+id/timer_textview"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            app:layout_constraintTop_toBottomOf="@id/minus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/stop_btn"
            android:textAllCaps="false"
            app:cornerRadius="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:id="@+id/start_btn"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            app:layout_constraintTop_toBottomOf="@id/plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/start_btn"
            android:textAllCaps="false"
            android:enabled="false"
            app:cornerRadius="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/stop_btn"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>