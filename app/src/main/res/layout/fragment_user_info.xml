<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.trainee.UserInfoFragment">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 out of 2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginStart="60dp"
            android:id="@+id/gender_textview"/>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:id="@+id/gender_option"
            app:layout_constraintStart_toEndOf="@id/gender_textview"
            app:layout_constraintTop_toTopOf="@id/gender_textview"
            android:checkedButton="@id/female_option"
            app:layout_constraintBottom_toBottomOf="@id/gender_textview"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/female_option"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/male_option"/>
        </RadioGroup>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/gender_textview"
            app:layout_constraintTop_toBottomOf="@id/gender_textview"
            android:layout_marginTop="50dp"
            android:id="@+id/age_textview"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/age_textview"
            app:layout_constraintStart_toStartOf="@id/gender_option"
            app:layout_constraintBottom_toBottomOf="@id/age_textview"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/age_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/age_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="years"
            app:layout_constraintStart_toEndOf="@id/age_input_layout"
            app:layout_constraintTop_toTopOf="@id/age_input_layout"
            app:layout_constraintBottom_toBottomOf="@id/age_input_layout"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:textStyle="bold"/>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/age_textview"
            app:layout_constraintTop_toBottomOf="@id/age_textview"
            android:layout_marginTop="50dp"
            android:id="@+id/weight_textview"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/weight_textview"
            app:layout_constraintStart_toStartOf="@id/age_input_layout"
            app:layout_constraintBottom_toBottomOf="@id/weight_textview"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/weight_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/weight_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:id="@+id/weight_option"
            app:layout_constraintStart_toEndOf="@id/weight_input_layout"
            app:layout_constraintTop_toTopOf="@id/weight_input_layout"
            android:checkedButton="@id/kg_option"
            app:layout_constraintBottom_toBottomOf="@id/weight_input_layout"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:id="@+id/kg_option"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lb"
                android:id="@+id/lb_option"/>
        </RadioGroup>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@id/weight_textview"
            app:layout_constraintTop_toBottomOf="@id/weight_textview"
            android:layout_marginTop="50dp"
            android:id="@+id/experience_textview"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/experience_textview"
            app:layout_constraintStart_toStartOf="@id/weight_input_layout"
            app:layout_constraintBottom_toBottomOf="@id/experience_textview"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/height_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:id="@+id/height_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:id="@+id/height_option"
            app:layout_constraintStart_toEndOf="@id/height_input_layout"
            app:layout_constraintTop_toTopOf="@id/height_input_layout"
            android:checkedButton="@id/cm_option"
            app:layout_constraintBottom_toBottomOf="@id/height_input_layout"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:id="@+id/cm_option"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ft"
                android:id="@+id/ft_option"/>
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/height_input_layout"
            android:id="@+id/next_btn"
            android:text="Next"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:layout_marginBottom="100dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>