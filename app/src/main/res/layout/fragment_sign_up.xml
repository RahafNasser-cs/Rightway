<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SignUpFragment"
    >
    <data>
        <variable
            name="signUpViewModel"
            type="com.rahafcs.co.rightway.viewmodels.SignUpViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/background_screen"
        >
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/back_arrow"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp"
            app:cornerRadius="6dp"
            android:text="@string/sign_up_with_google"
            app:icon="@drawable/google_icon"
            app:iconSize="20dp"
            app:iconGravity="textStart"
            app:iconTint="@null"
            android:id="@+id/sign_up_with_google_btn"
            android:backgroundTint="@color/dark_white"
            android:textColor="@color/light_black"
            android:textAllCaps="false"
            />
        <View
            android:id="@+id/divider1"
            style="@style/Widget.Rightway.Divider"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_with_google_btn"
            app:layout_constraintStart_toStartOf="@id/sign_up_with_google_btn"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/or"
            android:id="@+id/or_textview"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_with_google_btn"
            app:layout_constraintStart_toEndOf="@id/divider1"
            app:layout_constraintEnd_toStartOf="@id/divider2"/>
        <View
            android:id="@+id/divider2"
            style="@style/Widget.Rightway.Divider"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/sign_up_with_google_btn"
            app:layout_constraintEnd_toEndOf="@id/sign_up_with_google_btn"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/or_textview"
            app:layout_constraintStart_toStartOf="@id/or_textview"
            app:layout_constraintEnd_toEndOf="@id/or_textview"
            android:hint="@string/first_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/first_name_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/first_name_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/first_name_input_layout"
            app:layout_constraintEnd_toEndOf="@id/first_name_input_layout"
            app:layout_constraintTop_toBottomOf="@id/first_name_input_layout"
            android:layout_marginTop="8dp"
            android:hint="@string/last_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/last_name_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/last_name_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/last_name_input_layout"
            app:layout_constraintEnd_toEndOf="@id/last_name_input_layout"
            app:layout_constraintTop_toBottomOf="@id/last_name_input_layout"
            android:layout_marginTop="8dp"
            android:hint="@string/email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/email_input_layout">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/email_edit_text"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/email_input_layout"
            app:layout_constraintEnd_toEndOf="@id/email_input_layout"
            app:layout_constraintTop_toBottomOf="@id/email_input_layout"
            android:layout_marginTop="8dp"
            android:hint="@string/password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:id="@+id/password_input_layout"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:id="@+id/password_edit_text" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/password_requirements"
            app:layout_constraintTop_toBottomOf="@id/password_input_layout"
            app:layout_constraintStart_toStartOf="@id/password_input_layout"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:id="@+id/password_requirements"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:checkedButton="@id/trainee"
            app:layout_constraintTop_toBottomOf="@id/password_requirements"
            app:layout_constraintStart_toStartOf="@id/password_input_layout"
            app:layout_constraintEnd_toEndOf="@id/password_input_layout"
            android:id="@+id/user_options">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trainer"
                android:textColor="@color/light_black"
                android:id="@+id/trainer"/>
            <RadioButton
                android:textColor="@color/light_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trainee"
                android:id="@+id/trainee"/>

        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:cornerRadius="6dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/user_options"
            app:layout_constraintEnd_toEndOf="@id/user_options"
            app:layout_constraintTop_toBottomOf="@id/user_options"
            android:text="@string/sign_up"
            android:background="@drawable/button_disabled"
            android:id="@+id/sign_up_with_email_password_btn"
            android:textAllCaps="false"
            />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/light_black"
            android:text="@string/already_registered"
            android:id="@+id/ask_user_registered_textview"
            app:layout_constraintStart_toStartOf="@id/sign_up_with_email_password_btn"
            app:layout_constraintTop_toBottomOf="@id/sign_up_with_email_password_btn"
            android:layout_marginTop="8dp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:layout_constraintStart_toEndOf="@id/ask_user_registered_textview"
            app:layout_constraintTop_toTopOf="@id/ask_user_registered_textview"
            app:layout_constraintBottom_toBottomOf="@id/ask_user_registered_textview"
            android:id="@+id/sign_in_link_btn"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:lottie_rawRes="@raw/loading"
            app:registrationStatus="@{signUpViewModel.status}"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/sign_up_with_email_password_btn"
            app:layout_constraintEnd_toEndOf="@+id/sign_up_with_email_password_btn"
            app:layout_constraintTop_toTopOf="@+id/sign_up_with_email_password_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>